{
  "reporter": [
    "text",
    "html", 
    "lcov",
    "json-summary"
  ],
  "reports-dir": "./coverage",
  "temp-directory": "./coverage/.nyc_output",
  "include": [
    "assets/**/*.js"
  ],
  "exclude": [
    "tests/**",
    "node_modules/**",
    "coverage/**",
    "dist/**",
    "playwright-report/**",
    "test-results/**"
  ],
  "all": true,
  "check-coverage": true,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 80,
  "watermarks": {
    "lines": [80, 90],
    "functions": [80, 90], 
    "branches": [80, 90],
    "statements": [80, 90]
  }
}