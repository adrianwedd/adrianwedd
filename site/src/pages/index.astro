---
import BaseLayout from '../layouts/BaseLayout.astro';
import fs from 'fs';
import path from 'path';
import { marked } from 'marked';

// Read README.md from repo root at build time
const readmePath = path.join(process.cwd(), '..', 'README.md');
const readmeContent = fs.readFileSync(readmePath, 'utf-8');

// Configure marked for GitHub-flavored markdown
marked.setOptions({
  gfm: true,
  breaks: false
});

// Render markdown to HTML
const htmlContent = marked.parse(readmeContent);

// Extract title from first h1
const titleMatch = readmeContent.match(/^#\s+(.+)/m);
const title = titleMatch ? titleMatch[1].replace(/[^\w\s—]/g, '').trim() : 'Adrian Wedd';
---

<BaseLayout
  title="Adrian Wedd — Forensic Sentinel"
  description="Forensic systems architecture: instrumenting autonomy, stress-testing trust, keeping humans sovereign when inputs get strange."
>
  <article class="portfolio-container content-surface">
    <div class="readme-body" set:html={htmlContent} />
  </article>
</BaseLayout>

<style>
  article {
    padding: 3rem 1.5rem;
    padding-bottom: 8rem;
  }

  .readme-body {
    margin-bottom: 2rem;
  }

  /* Title styling */
  .readme-body :global(h1) {
    font-size: 1.75rem;
    font-weight: 500;
    margin-bottom: 1.25rem;
    letter-spacing: -0.01em;
  }

  /* Section headers */
  .readme-body :global(h2) {
    font-size: 1.3rem;
    font-weight: 500;
    margin-top: 2.5rem;
    margin-bottom: 0.75rem;
    padding-bottom: 0.35rem;
    border-bottom: 1px solid var(--rule);
  }

  /* Subsection headers */
  .readme-body :global(h3) {
    font-size: 1.1rem;
    font-weight: 500;
    margin-top: 1.75rem;
    margin-bottom: 0.5rem;
    color: var(--fg);
  }

  /* Index headers */
  .readme-body :global(h4) {
    font-size: 0.95rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .readme-body :global(p) {
    margin-bottom: 1rem;
  }

  .readme-body :global(ul) {
    list-style: none;
    padding-left: 0;
    margin-bottom: 1rem;
  }

  .readme-body :global(li) {
    position: relative;
    padding-left: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .readme-body :global(li::before) {
    content: "—";
    position: absolute;
    left: 0;
    color: var(--muted);
  }

  /* Nested lists */
  .readme-body :global(ul ul) {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .readme-body :global(ul ul li::before) {
    content: "·";
  }

  .readme-body :global(hr) {
    border: none;
    border-top: 1px solid var(--rule);
    margin: 2rem 0;
  }

  .readme-body :global(a) {
    color: var(--link);
  }

  .readme-body :global(strong) {
    font-weight: 600;
    color: var(--fg);
  }

  .readme-body :global(code) {
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', monospace;
    font-size: 0.85em;
    background: rgba(138, 199, 217, 0.08);
    padding: 0.15em 0.4em;
    border-radius: 3px;
    color: var(--link);
  }

  /* Stack section inline codes */
  .readme-body :global(p > code) {
    margin-right: 0.25rem;
  }

  @media (max-width: 600px) {
    article {
      padding: 2rem 1rem;
    }

    .readme-body :global(h1) {
      font-size: 1.4rem;
    }

    .readme-body :global(h2) {
      font-size: 1.15rem;
    }
  }

  @media print {
    article {
      padding: 0;
    }
  }
</style>
