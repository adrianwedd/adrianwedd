{
  "name": "adrian-wedd-terminal",
  "version": "1.0.0",
  "description": "Interactive terminal interface for Adrian Wedd's digital ecosystem",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "screenshots": "playwright test --update-snapshots",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.js\"",
    "format-check": "prettier --check "**/*.js"",
    "lint:css": "stylelint "**/*.css""
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@playwright/test": "^1.54.1",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.2.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.22.0",
    "stylelint-config-standard": "^38.0.0"
  },
  "keywords": [
    "terminal",
    "interactive",
    "ai",
    "claude",
    "github-actions",
    "adrian-wedd"
  ],
  "author": "Adrian Wedd",
  "license": "MIT",
  "main": "playwright.config.js",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianwedd/adrianwedd.git"
  },
  "bugs": {
    "url": "https://github.com/adrianwedd/adrianwedd/issues"
  },
  "homepage": "https://github.com/adrianwedd/adrianwedd#readme"
}
