{
  "name": "adrian-wedd-terminal",
  "version": "1.0.0",
  "type": "module",
  "description": "Interactive terminal interface for Adrian Wedd's digital ecosystem",
  "scripts": {
    "test": "playwright test",
    "test:e2e": "playwright test tests/e2e",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "screenshots": "playwright test --update-snapshots",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.js\"",
    "format-check": "prettier --check \"**/*.js\"",
    "lint:css": "stylelint \"**/*.css\"",
    "test:unit": "playwright test tests/unit",
    "test:accessibility": "playwright test tests/e2e/accessibility.spec.js",
    "test:mobile": "playwright test tests/e2e/mobile-responsiveness.spec.js",
    "prepare": "husky install",
    "lhci": "lhci autorun --config=.lighthouserc.js",
    "build": "rm -rf dist && mkdir -p dist && cp index.html dist/ && cp -r assets/ dist/assets/ && cp -r api/ dist/api/"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.31.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.54.1",
    "axe-core": "^4.10.3",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "stylelint": "^16.22.0",
    "stylelint-config-standard": "^38.0.0"
  },
  "keywords": [
    "terminal",
    "interactive",
    "ai",
    "claude",
    "github-actions",
    "adrian-wedd"
  ],
  "author": "Adrian Wedd",
  "license": "MIT",
  "main": "playwright.config.cjs",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianwedd/adrianwedd.git"
  },
  "bugs": {
    "url": "https://github.com/adrianwedd/adrianwedd/issues"
  },
  "homepage": "https://github.com/adrianwedd/adrianwedd#readme",
  "lint-staged": {
    "*.js": "eslint --fix && prettier --write",
    "*.css": "stylelint --fix"
  }
}
